# Solana Auto Trader Configuration

# Phantom Wallet Private Key (Base58 format)
# Hanki tämä create_solana_wallet.py ohjelmalla
PHANTOM_PRIVATE_KEY=your_private_key_here

# Trading Parameters
POSITION_SIZE_SOL=0.05          # SOL määrä per kauppa
MAX_POSITIONS=3                 # Maksimi samanaikaisia positioita
STOP_LOSS_PERCENT=30           # Stop loss prosentti
TAKE_PROFIT_PERCENT=50         # Take profit prosentti
MAX_HOLD_HOURS=48              # Maksimi hold aika tunneissa
COOLDOWN_HOURS=24              # Cooldown aika per token tunneissa
MIN_SCORE_THRESHOLD=7.0        # Minimi score threshold (0-10)
SLIPPAGE_BPS=100               # Slippage basis points (100 = 1%)

# Telegram Notifications (valinnainen)
# Hanki bot token @BotFather:lta Telegramissa
# Hanki chat ID get_telegram_chat_id.py ohjelmalla
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Solana RPC Endpoint (valinnainen)
# Voit käyttää julkista RPC:tä tai omaa
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Advanced Settings (valinnainen)
# Nämä ovat edistyneitä asetuksia, älä muuta ellei tiedä mitä teet
SCAN_INTERVAL_SECONDS=30       # Token skannaus väli
MAX_RETRIES=3                  # Maksimi uudelleenyritykset
REQUEST_TIMEOUT=10             # HTTP request timeout sekunteina
LOG_LEVEL=INFO                 # Logging taso: DEBUG, INFO, WARNING, ERROR